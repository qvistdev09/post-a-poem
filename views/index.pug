doctype html
html(lang="en")
    head
        title Post a Poem
        link(rel="stylesheet", href="style.css")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap", rel="stylesheet")
    body
        div(id="root")
            h1 10 word poem maker
            div(id="word-palette")
            div(id="composed-poem")
            button(id="submit-poem-btn") Submit poem
            h2 Submitted poems
            div
                each val in poems
                    p= val
            script(src='app.js')